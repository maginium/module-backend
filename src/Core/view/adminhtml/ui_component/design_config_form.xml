<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="other_settings">
        <fieldset name="footer">
            <!-- Textarea field for the footer copyright -->
            <field formElement="textarea" name="footer_copyright">
                <settings>
                    <!-- Disable HTML tag validation for this field -->
                    <validation>
                        <rule xsi:type="boolean" name="validate-no-html-tags">false</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
    </fieldset>
</form>
