            <field id="twitter_link" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="text">
                <label>Twitter Link</label>
                <depends>
                    <field id="twitter_enable">1</field>
                </depends>
            </field>
        </group>

