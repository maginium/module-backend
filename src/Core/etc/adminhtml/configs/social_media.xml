<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/config.xsd">
    <!-- General Section -->
    <!-- Social Media Configuration -->
    <group id="social_links" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="140" translate="label">
        <label>Social Media Configuration</label>

        <!-- Facebook -->
        <group id="facebook" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
            <label>Facebook Settings</label>

            <field id="facebook_enable" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
                <label>Enable Facebook</label>
                <frontend_class>on-off-trigger</frontend_class>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            </field>

            <field id="facebook_link" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="text">
                <label>Facebook Link</label>
                <depends>
                    <field id="facebook_enable">1</field>
                </depends>
            </field>
        </group>

        <!-- Twitter -->
        <group id="twitter" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label">
